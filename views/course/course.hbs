<!-- popular_courses_start -->
<div class="popular_courses plus_padding">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="section_title text-center mb-100">
                    <h3>Danh sách khóa học</h3>
                    <p>Your domain control panel is designed for ease-of-use and <br> allows for all aspects of your
                        domains.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        <form action="/course">
                            <a class="navbar-brand">
                                <select name="PriceSorting" id="">
                                    <option value="">Sắp xếp theo giá</option>
                                    <option value="ASC">Giá tăng dần</option>
                                    <option value="DESC">Giá giảm dần</option>
                                </select>
                            </a>
                            <a class="navbar-brand">
                                <select name="RateSorting" id="">
                                    <option value="">Sắp xếp theo đánh giá</option>
                                    <option value="ASC">Đánh giá sao tăng dần</option>
                                    <option value="DESC">Đánh giá sao giảm dần</option>
                                </select>
                            </a>
                            <a class="navbar-brand">
                                <select name="ViewSorting" id="">
                                    <option value="">Sắp xếp theo views</option>
                                    <option value="ASC">Lượt views tăng dần</option>
                                    <option value="DESC">Lượt views giảm dần</option>
                                </select>
                            </a>
                            <button type="submit">Áp dụng</button>
                        </form>
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                    </div>
                </nav>
            </div>
        </div>
        <div class="tab-pane fade show active" id="home">
            <div class="row">
                {{#each ListAll}}
                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="single_courses">
                        <div class="thumb">
                            <a href="/detail?ID={{this.ID}}">
                                <img src="img/courses/1.png" alt="">
                            </a>
                        </div>
                        <div class="courses_info">
                            <span><i class="icon nalika-user" aria-hidden="true"></i>Số người đã tham gia:
                                {{this.CurrentStudents}}/{{this.MaxStudents}}</span>
                            <h3><a href="/detail?ID={{this.ID}}">{{this.Name}} <br></a></h3>
                            <div class="star_prise d-flex justify-content-between">
                                <div class="star">
                                    <i class="flaticon-mark-as-favorite-star"></i>
                                    <span>{{this.Rating}}</span>
                                </div>
                                <div class="prise">
                                    <span class="active_prise">
                                        {{this.Price}} VND
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                <div class="col-xl-12">
                    <div class="more_courses text-center">
                        <form action="/course">
                            {{#if IsFilter}}
                            <input type="text" name="ConfigCourseTypeId" value="{{CourseType}}" hidden>
                            {{/if}}
                            {{#if IsSorting}}
                            <input type="text" name="PriceSorting" value="{{PriceSorting}}" hidden>
                            <input type="text" name="RateSorting" value="{{RateSorting}}" hidden>
                            <input type="text" name="ViewSorting" value="ViewSorting" hidden>
                            {{/if}}
                            <nav class="d-flex justify-content-center" aria-label="...">
                                <ul class="pagination pagination-lg">
                                    {{#each PagesAll }}
                                    <li class="page-item">
                                        <button class="btn btn_link" name="Page" value="{{this}}">{{this}}</button>
                                    </li>
                                    {{/each}}
                                </ul>
                            </nav>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- popular_courses_end-->
