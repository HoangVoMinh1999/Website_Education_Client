<!-- bradcam_area_start -->
<div class="courses_details_banner">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="course_text">
                    <h3>{{CourseType}} <br> {{data.Name}}</h3>
                    <div class="prise">
                        <span class="active">{{data.Price}} VND</span>
                    </div>
                    <div class="rating">
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <span class="font-size-5">{{data.Rating}}</span>
                    </div>
                    <div class="hours">
                        <div class="video">
                            <div class="single_video">
                                <i class="fa fa-clock-o"></i> <span>12 Videos</span>
                            </div>
                            <div class="single_video">
                                <i class="fa fa-play-circle-o"></i> <span>9 Hours</span>
                            </div>
                            <div class="">
                                <i class="icon nalika-user"></i><span>Số người đã tham gia:
                                    {{data.CurrentStudents}}/{{data.MaxStudents}}</span>
                            </div>
                            <div class="single_video">
                                <i class="bi bi-card-text"></i> <span>Mô tả chung: </span>
                                <p>
                                    <i class="bi bi-card-text"></i>
                                    <span>
                                        <textarea class="form-control bg-warning" name="" id="" cols="30" rows="10"
                                            disabled>{{data.Intro}}</textarea>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- bradcam_area_end -->

<div class="courses_details_info">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-7">
                <div class="single_courses">
                    <h3>Description</h3>
                    <div contenteditable="true">
                        {{data.Description}}
                    </div>
                </div>
            </div>
            <div class="col-xl-5 col-lg-5">
                <div class="courses_sidebar">
                    <div class="video_thumb">
                        <img src="img/latest_blog/video.png" alt="">
                        <a class="popup-video" href="https://www.youtube.com/watch?v=AjgD3CvWzS0">
                            <i class="fa fa-play"></i>
                        </a>
                    </div>
                    <div class="author_info">
                        <div class="auhor_header">
                            <div class="thumb">
                                <img src="img/latest_blog/author.png" alt="">
                            </div>
                            <div class="name">
                                <h3>{{User.Username}}</h3>
                                <p>{{User.Email}}</p>
                            </div>
                        </div>
                        <p class="text_info">
                            {{User.Bio}}
                        </p>
                        <ul>
                            <li><a href="#"> <i class="fa fa-envelope"></i> </a></li>
                            <li><a href="#"> <i class="fa fa-twitter"></i> </a></li>
                            <li><a href="#"> <i class="ti-linkedin"></i> </a></li>
                        </ul>
                    </div>
                    {{#if IsFull }}
                    <button class="boxed_btn btn-secondary" disabled> Tham gia khóa học</button>
                    {{else}}
                    {{#if IsJoin}}
                    <form action="/cancel-course" method="POST">
                        <button class="boxed_btn btn-danger" type="submit" name="courseId" value="{{data.ID}}">Hủy khóa
                            học</button>
                    </form>
                    {{else}}
                    <form action="/join-course" method="POST">
                        <button class="boxed_btn" type="submit" name="courseId" value="{{data.ID}}">Tham gia khóa
                            học</button>
                    </form>
                    {{/if}}

                    {{/if}}
                    {{#if IsFavorite}}
                    <form action="/remove-wishlist" method="POST">
                        <button class="boxed_btn" type="submit" name="courseId" value="{{data.ID}}">Hủy yêu thích</button>
                    </form>
                    {{else}}
                    <form action="/add-wishlist" method="POST">
                        <button class="boxed_btn" type="submit" name="courseId" value="{{data.ID}}">Yêu thích</button>
                    </form>
                    {{/if}}
                    <div class="feedback_info">
                        <h3>Write your feedback</h3>
                        <p>Your rating</p>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>
                        <i class="flaticon-mark-as-favorite-star"></i>

                        <form action="/comment" method="POST">
                            <textarea name="comment" id="" cols="30" rows="10"
                                placeholder="Write your feedback"></textarea>
                            <button type="submit" class="boxed_btn" name="courseId" value="{{data.ID}}">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <h3>Comments</h3>
            <div class="col-12">
                <ul class="list-group list-group-flush">
                    {{#each Rates}}
                    <li class="list-group-item">
                        <p>({{this.Rate}})<i class="flaticon-mark-as-favorite-star"></i></p>
                        <p>{{this.Comment}}</p>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

